<%- include("partials/header")%>



<div class="container">
    <header class="jumbotron">
        <div class="container text-center" >
            <h1>Welcome to Campgrounds!</h1>
            <p>Hand Picked Campgrounds from all over the World!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header class="jumbotron">
    <div class="row container d-flex justify-content-center flex-wrap">
        <div class=" row d-flex justify-content-center col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        <% campgrounds.forEach(function(campgrounds){ %>
        <div class="row">
            <div class="col-6 col-md-4">
                <div class="img-thumbnail">
                    <img class="figure-img" src="<%= campgrounds.image %>" alt="Campground Images">
                    <figcaption class="figure-caption">
                        <li><%= campgrounds.name %></li>
                    </figcaption>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<%- include("partials/footer")%>