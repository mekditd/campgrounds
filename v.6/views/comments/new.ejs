<%- include("../partials/header")%>

<div class="container ">
    <div class="row d-flex justify-content-center ">
        <h1>Add New Comment to <%= campground.name %></h1>
    </div>
    <div class="row d-flex flex-column justify-content-center ">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group d-flex justify-content-center">
                <input class="form-control mx-sm-4" type="text" name="comment[text]" placeholder="text" id="">
            </div>
            <div class="form-group d-flex justify-content-center">
                <input class="form-control mx-sm-4" type="text" name="comment[author]" placeholder="author" id="">
            </div>

            <div class="form-group d-flex justify-content-center">
                <button class="btn btn-lg btn-default btn-block btn-primary mx-sm-4">Submit</button>
            </div>
        </form>
        <a class="align-self-start" href="/campgrounds">Go Back</a>

    </div>

</div>

<%- include("../partials/footer")%>