<%- include("partials/header")%>

<div class="container ">
    <div class="row d-flex justify-content-center ">
        <h1>Create New Campground</h1>
    </div>
    <div class="row d-flex flex-column justify-content-center ">
        <form action="/campgrounds" method="POST">
            <div class="form-group d-flex justify-content-center">
                <input class="form-control mx-sm-4" type="text" name="name" placeholder="name" id="">
            </div>
            <div class="form-group d-flex justify-content-center">
                <input class="form-control mx-sm-4" type="text" name="image" placeholder="image" id="">
            </div>
            <div class="form-group d-flex justify-content-center">
                <textarea class="form-control rounded-0 mx-sm-4" name="description" rows="3"
                    placeholder="description"></textarea>
            </div>
            <div class="form-group d-flex justify-content-center">
                <button class="btn btn-lg btn-default btn-block btn-primary mx-sm-4">Submit</button>
            </div>
        </form>
        <a class="return align-self-start" href="/campgrounds">Go Back</a>

    </div>

</div>

<%- include("partials/footer")%>