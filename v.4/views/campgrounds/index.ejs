<%- include("../partials/header")%>



<div class="container">
    <header class="jumbotron">
        <div class="container text-center">
            <h1>Welcome to Campgrounds!</h1>
            <p>Hand Picked Campgrounds from all over the World!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header >
    <div class="row container d-flex justify-content-center flex-wrap">
        <div class=" row d-flex justify-content-center col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img class="img-thumbnail " src="<%= campground.image %> " alt="Campground Images">
                    <div class="figure-caption">
                        <li><%= campground.name %></li>
                    </div>
                    <p >
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>

            </div>

        <% }); %>
    </div>
</div>

<%- include("../partials/footer")%>